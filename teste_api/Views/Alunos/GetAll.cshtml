@{
    ViewData["Title"] = "Todos os Alunos";
}

@model List<teste_api.Models.Entites.Aluno>

<h1>Todos os Alunos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Id</td>
                <td><a asp-action="GetById" asp-route-id="@aluno.Id">@aluno.Nome</a></td>
                <td>@aluno.Email</td>
                <td>@aluno.Telefone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Alunos" asp-action="EditarAluno" asp-route-id="@aluno.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-controller="Alunos" asp-action="AlunoCreate">Novo Aluno</a>