@{
    ViewData["Title"] = "Adicionar Matéria";
}

@model teste_api.Models.AddMateriaViewModel

<h1>Adicionar Matéria</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Nome da Matéria</label>
        <input type="text" class="form-control" asp-for="Nome" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Professor</label>
        <input type="text" class="form-control" asp-for="Tutor" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Período</label>
        <select class="form-select-sm" asp-for="Periodo" required>
            <option value="Mensal">Mensal</option>
            <option value="Semestral">Semestral</option>
            <option value="Anual">Anual</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>

</form>